@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="container text-center mt-5">
    <h1 class="display-4">Oops! Something went wrong.</h1>
    <p class="lead text-muted">We encountered an error while processing your request.</p>

    @if (Model.ShowRequestId)
    {
        <p class="mt-3">
            <strong>Request ID:</strong> <code class="bg-body-tertiary p-2 rounded">@Model.RequestId</code>
        </p>
    }

    <div class="mt-4">
        <a href="/" class="btn btn-primary btn-lg">Back to Home</a>
    </div>

    <p class="mt-4 text-muted">If the problem persists, please contact support.</p>
</div>
