@using Microsoft.AspNetCore.Identity
@using StudyPomo.Library.Models.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en" x-data="{
    theme: localStorage.getItem('theme') || '@Context.Session.GetString("theme")',
    setTheme(newTheme) {
        this.theme = newTheme;
        localStorage.setItem('theme', newTheme);
    }
}" x-init="$watch('theme', value => localStorage.setItem('theme', value))" :data-bs-theme="theme">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="htmx-config" includeAspNetAntiforgeryToken="true" />
    <title>studypomo</title>
    <style>
        /* Hide content until Alpine.js applies the theme */
        body {
            visibility: hidden;
        }
    </style>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'><path fill='%23FFFFFF' d='M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zM1 8a7 7 0 0 1 7-7 3.5 3.5 0 1 1 0 7 3.5 3.5 0 1 0 0 7 7 7 0 0 1-7-7zm7-4.3a3.2 3.2 0 1 1 0 6.4 3.2 3.2 0 0 1 0-6.4zM9 8a1 1 0 1 1-2 0 1 1 0 0 1 2 0z'/></svg>">
    <link rel="stylesheet" href="~/lib/bootstrap/scss/custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StudyPomo.UI.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body x-init="document.body.style.visibility = 'visible';"
      hx-post="/?handler=UpdateTimeZone"
      hx-trigger="load from:window delay:100ms"
      hx-include="#timezone-input"
      hx-swap="none">
    <!-- Hidden input to store the client's timezone -->
    <input type="hidden" id="timezone-input" name="ianaTimeZone" value="test">
    <div class="content-wrapper">
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm mb-3 py-3">
                <div class="container">
                    <a class="navbar-brand" :class="theme == 'dark' ? 'text-light' : 'text-dark'" asp-page="/Manage/Index">
                        <h4>studypomo</h4>                      
                     </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                        </ul>
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <div class="dropdown">
                                        <a class="nav-link" data-bs-toggle="offcanvas" href="#nav-offcanvas" role="button" aria-controls="nav-offcanvas">
                                            Manage
                                        </a>
                                    </div>
                                </li>
                            </ul>
                            <div class="d-none d-sm-block mt-1 h-100 mx-3">
                                <div class="vr h-100"></div>
                            </div>
                        }
                        <div class="dropdown">
                            <i style="cursor: pointer" :class="theme == 'dark' ? 'bi bi-moon-stars' : 'bi bi-sun-fill'" id="themeDropdown" data-bs-toggle="dropdown" aria-expanded="false"></i>
                            <ul class="dropdown-menu" aria-labelledby="themeDropdown">
                                <li><a class="dropdown-item" style="cursor: pointer" hx-post hx-swap="none" hx-page="Index" hx-page-handler="SetPreferredTheme" hx-route-theme="light" x-on:click="setTheme('light')"><i class="bi bi-sun-fill"></i> Light</a></li>
                                <li><a class="dropdown-item" style="cursor: pointer" hx-post hx-swap="none" hx-page="Index" hx-page-handler="SetPreferredTheme" hx-route-theme="dark" x-on:click="setTheme('dark')"><i class="bi bi-moon-stars"></i> Dark</a></li>
                            </ul>
                        </div>
                        <div class="d-none d-sm-block mt-1 h-100 mx-3">
                            <div class="vr h-100"></div>
                        </div>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
            <div class="offcanvas offcanvas-start rounded-end-4" style="width: 350px;" tabindex="-1" id="nav-offcanvas" aria-labelledby="nav-offcanvas-label">
                <div class="offcanvas-header">
                    <div>
                        <h5 class="offcanvas-title" id="nav-offcanvas-label">studypomo</h5>
                        <a class="small text-muted" asp-area="Identity" asp-page="/Account/Manage/Index"><i class="bi bi-person-fill me-1"></i>@UserManager.GetUserName(User)</a>
                    </div>
                    
                    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link illuminate" asp-page="/Manage/Index">
                                <i class="bi bi-house-door me-1 text-muted"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link illuminate" asp-page="/Manage/Labels/Index">
                                <i class="bi bi-tag me-1 text-muted"></i> Labels
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link illuminate" asp-page="/Manage/Tasks/All">
                                <i class="bi bi-list-task me-1 text-muted"></i> Tasks
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link illuminate" asp-page="/Manage/Courses/All">
                                <i class="bi bi-book me-1 text-muted"></i> Courses
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </header>
        <div class="d-flex flex-column pt-2 h-100">
            <main role="main" class="container-sm">
                @RenderBody()
            </main>
        </div>
        <footer class="footer">
            <small class="my-0 py-0"><i class="bi bi-github me-2"></i><a href="https://github.com/kj-49" class="my-0 py-0 text-body-tertiary" target="_blank">Kyle James</a></small>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/bootstrap-5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://unpkg.com/htmx.org@2.0.1" integrity="sha384-QWGpdj554B4ETpJJC9z+ZHJcA/i59TyjxEPXiiUgN2WmTyV5OEZWCD6gQhgkdpB/" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/hyperscript.org@0.9.12"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            
            // Detect the client's timezone
            var timezone = Intl.DateTimeFormat().resolvedOptions().timeZone;
            console.log(`Timezone detected: ${timezone}`);
            // Set the value of the hidden input
            document.getElementById("timezone-input").value = timezone;
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
