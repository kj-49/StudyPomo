@page
@using Humanizer
@model PomodoroUI.Pages.Manage.IndexModel
@{
}

<style>
    .card-hover {
        transition: box-shadow 0.2s;
    }

        .card-hover:hover {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15), 0 6px 20px rgba(0, 0, 0, 0.1);
        }
</style>

<h5 class="mb-3">Courses</h5>
@if (Model.Courses.Count == 0)
{
    <p>No courses added.</p>
}
else
{
    <div class="row">
        @foreach (var course in Model.Courses)
        {
            <div class="col-md-4 mb-4">
                <a asp-page="/Manage/Course" asp-route-id="@course.Id" class="text-decoration-none">
                    <div class="card h-100 card-hover" style="border-left: 5px solid @course.HexColor;">
                        <div class="card-body">
                            <h5 class="card-title fw-bold">@course.Name</h5>
                            <p class="card-text">@course.Description</p>
                            <div class="mt-3 d-flex align-items-center">
                                @if (course.Archived)
                                {
                                    <span class="badge bg-secondary">Archived</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
}
