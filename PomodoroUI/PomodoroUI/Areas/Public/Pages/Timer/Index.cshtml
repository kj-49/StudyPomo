@page
@model PomodoroUI.Areas.Public.Pages.Timer.IndexModel
@{
}

<div class="row">
    <div class="col-4">
        <div class="d-flex align-items-center mb-3">
            <h5 class="me-2 my-0">Rounds</h5>
            <i class="bi bi-arrow-right me-3"></i>
            <div class="d-flex pt-1">
                <i class="bi bi-check-square me-2"></i>
                <i class="bi bi-check-square me-2"></i>
                <i class="bi bi-check-square me-2"></i>
                <i class="bi bi-check-square me-2" style="opacity: 50%"></i>
                <i class="bi bi-check-square me-2" style="opacity: 50%"></i>
                <i class="bi bi-check-square" style="opacity: 50%"></i>
            </div>
        </div>
        <div class="d-flex align-items-center">
            <h5 class="me-2 my-0">Total Time</h5>
            <i class="bi bi-arrow-right me-3"></i>
            <h5 class="fw-normal my-0">13:00</h5>
        </div>
    </div>
    <div class="col-8 d-flex justify-content-center">
        <div class="graph">
            <ul class="months">
                <li>Jan</li>
                <li>Feb</li>
                <li>Mar</li>
                <li>Apr</li>
                <li>May</li>
                <li>Jun</li>
                <li>Jul</li>
                <li>Aug</li>
                <li>Sep</li>
                <li>Oct</li>
                <li>Nov</li>
                <li>Dec</li>
            </ul>
            <ul class="days">
                <li>Sun</li>
                <li>Mon</li>
                <li>Tue</li>
                <li>Wed</li>
                <li>Thu</li>
                <li>Fri</li>
                <li>Sat</li>
            </ul>
            <ul class="squares">
                <!-- added via javascript -->
            </ul>
        </div>
    </div>
</div>

<div>
    <div class="d-flex">
        <div class="me-2">
            <input type="radio" class="btn-check" name="timer-options" value="60" id="option5" autocomplete="off" checked>
            <label class="btn" for="option5">60min</label>
        </div>
        <div class="me-2">
            <input type="radio" class="btn-check" name="timer-options" value="30" id="option6" autocomplete="off">
            <label class="btn" for="option6">30min</label>
        </div>
        <div class="me-2">
            <input type="radio" class="btn-check" name="timer-options" value="15" id="option7" autocomplete="off">
            <label class="btn" for="option7">15min</label>
        </div>
        <div class="me-2">
            <input type="radio" class="btn-check" name="timer-options" value="5" id="option8" autocomplete="off">
            <label class="btn" for="option8">5min</label>
        </div>
        <div>
            <button class="btn btn-primary me-2" id="startstop-button">Start</button>
        </div>
        <div>
            <button class="btn btn-secondary d-none" id="reset-button">Reset</button>
        </div>
    </div>
    <p id="timer" class="timer">
        00:00
    </p>
    <div class="progress">
        <div class="progress-bar" id="progress-bar" role="progressbar" width="100%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
</div>


@section Scripts {
    <script src="~/Areas/Public/Pages/Timer/Index.cshtml.js" asp-append-version="true"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function (event) {
            init();
        });
    </script>
    

}
