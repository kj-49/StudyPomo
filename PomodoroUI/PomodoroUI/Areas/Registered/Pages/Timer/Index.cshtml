@page
@using PomodoroLibrary.Models.Utility
@model PomodoroUI.Areas.Registered.Pages.Timer.IndexModel
@{
}

<div class="modal fade" id="task-modal" tabindex="-1" aria-labelledby="taskModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header mb-3">
                <h5 class="modal-title" id="taskModalLabel">Create a Task</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="mb-1 px-3">
                <small>Add important tasks you want to complete during this session.</a></small>
            </div>
            <hr class="text-opacity-50" />
            <div>
                <div>
                    <form method="post" asp-page-handler="CreateOverride">
                        <div class="modal-body">
                            <div class="mb-2">
                                <label asp-for="StudyTaskCreate.Name" class="form-label">Task:</label>
                                <input class="form-control form-control-sm" asp-for="StudyTaskCreate.Name" />
                                <span asp-validation-for="StudyTaskCreate.Name" class="text-danger form-text"></span>
                            </div>
                            <div class="mb-2">
                                <label asp-for="StudyTaskCreate.TaskPriority" class="form-label">Priority:</label>
                                <div class="form-check">
                                    <input class="form-check-input" selected type="radio" asp-for="StudyTaskCreate.TaskPriority" value="@((int)SD.TaskPriority.Low)" id="low" />
                                    <label class="form-check-label" for="low">Low</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="StudyTaskCreate.TaskPriority" value="@((int)SD.TaskPriority.Medium)" id="medium" />
                                    <label class="form-check-label" for="medium">Medium</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="StudyTaskCreate.TaskPriority" value="@((int)SD.TaskPriority.High)" id="high" />
                                    <label class="form-check-label" for="high">High</label>
                                </div>
                                <span asp-validation-for="StudyTaskCreate.TaskPriority" class="text-danger form-text"></span>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Create</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="d-flex mb-4">
    <i class="bi bi-square-fill text-primary me-2"></i>
    <i class="bi bi-square-fill text-primary me-2"></i>
    <i class="bi bi-square-fill me-2"></i>
    <i class="bi bi-square me-2"></i>
    <i class="bi bi-square me-2"></i>
</div>

<div class="mb-5">
    <div class="d-flex">
        <div class="me-2">
            <input type="radio" class="btn-check" name="timer-options" value="60" id="option5" autocomplete="off" checked>
            <label class="btn" for="option5">60min</label>
        </div>
        <div class="me-2">
            <input type="radio" class="btn-check" name="timer-options" value="30" id="option6" autocomplete="off">
            <label class="btn" for="option6">30min</label>
        </div>
        <div class="me-2">
            <input type="radio" class="btn-check" name="timer-options" value="15" id="option7" autocomplete="off">
            <label class="btn" for="option7">15min</label>
        </div>
        <div class="me-2">
            <input type="radio" class="btn-check" name="timer-options" value="5" id="option8" autocomplete="off">
            <label class="btn" for="option8">5min</label>
        </div>
        <div>
            <button class="btn btn-primary me-2" id="startstop-button">Start</button>
        </div>
        <div>
            <button class="btn btn-secondary d-none" id="reset-button">Reset</button>
        </div>
    </div>
    <p id="timer" class="timer">
        00:00
    </p>
    <div class="progress">
        <div class="progress-bar" id="progress-bar" role="progressbar" width="100%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
</div>

<div class="row">
    <div class="col-6">
        <div class="d-flex justify-content-between">
            <div>
                <h5>Tasks</h5>
            </div>
            <div>
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#task-modal">Add Task</button>
            </div>
        </div>

        <div class="border border-1 border-opacity-25 border-primary-subtle rounded p-3 mb-3">
            Task 1S
        </div>
        <div class="border border-1 border-opacity-25 border-primary-subtle rounded p-3">
            Task 1S
        </div>
    </div>

</div>


@section Scripts {

    <partial name="_ValidationScriptsPartial" />

    <script src="~/Areas/Registered/Pages/Timer/Index.cshtml.js" asp-append-version="true"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function (event) {
            init();
        });
    </script>
  
        
 


}
